<div class="row">
  <div class="col-12">
    <h2 class="h4 text-red">
      Log in for sell and to rent
    </h2>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <%= form_with(scope: :session, url: login_path, local: true) do |f|%>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control'%>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control '%>
      </div>

      <%= f.submit 'Log In', class: 'btn d-block bg-light text-red mx-auto'%>
    <% end %>
  </div>
</div>