<div class="row">
  <div class="col-5 mx-auto text-center">
    <h5 class="display-5">Announce your apartment</h5>
  </div>
</div>
<div class="row">
    <div class="col-9 mx-auto">
      <% if @apartment.errors.any? %>
        <h2 class="h3 text-red">The following errors prevented you from creating your announce correctly</h2>
        <% @apartment.errors.full_messages.each do |msg| %>
          <ul>
            <li class="text-red"> <%= msg %> </li>
          </ul>
        <% end %>
      <% end %>
        <%= form_with(model: @apartment, local: true, class: 'w-50 mx-auto') do |f|%>
          <div class="form-group">
            <%= f.label :adress %>
            <%= f.text_field :adress, class: 'form-control'%>
          </div>
          <div class="form-group">
            <%= f.label :price %>
            <%= f.text_field :price, class: 'form-control' %>
          </div>
        <div class="form-group">
        <%= f.label :bedrooms %>
        <%= select(:bedroom, :number, [[1, 'one'], [2, 'two'], [3, 'three'], [4, 'four'], [5, 'five'], [6, 'six']]) %>
          </div>
        <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :body do |cb| %>
      <% cb.label {cb.check_box} + cb.text %>
    <% end %>
                <%= f.file_field :images, multiple: true  %>

          <%= f.submit 'I want to sell my apartment', class: 'btn d-block bg-dark text-red mx-auto'%>
        <% end %>
    </div>
</div>
